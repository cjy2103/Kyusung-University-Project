<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".bus.busmain">


    <Button

        android:id="@+id/buspage_move"
        android:layout_width="418dp"
        android:layout_height="340dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/img_vacation"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button

        android:id="@+id/normal_move"
        android:layout_width="418dp"
        android:layout_height="393dp"
        android:layout_marginBottom="432dp"
        android:background="@drawable/img_spring"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="388dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/hkView3"
            android:layout_width="203dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="학기중"
            android:textSize="35dp"
            android:fontFamily="@font/maplebold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/buspageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="48dp"
            android:gravity="center"
            android:text="방학 "
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/normalView" />

        <TextView
            android:id="@+id/hkView4"
            android:layout_width="203dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="방학"
            android:textSize="35dp"
            android:fontFamily="@font/maplebold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>