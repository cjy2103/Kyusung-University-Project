<?xml version="1.0" encoding="utf-8"?>
<!--스크롤 뷰 -->
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/ScrollView1"

    android:layout_width="match_parent"

    android:layout_height="match_parent"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:background="#FFFFFF"
            tools:context=".MainActivity">


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="377dp"
                    android:layout_height="95dp"
                    android:paddingBottom="10dp"
                    app:srcCompat="@drawable/img_logo" />

                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="150dp"
                    android:background="#FBF0F4"
                    android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/kysung_move"
                            android:layout_width="1dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginRight="50dp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="10dp"
                            android:src="@drawable/img_school"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:gravity="center"
                            android:minWidth="0dp"
                            android:minHeight="0dp" />

                        <ImageButton
                            android:id="@+id/food_move"
                            android:layout_width="1dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginRight="40dp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom"
                            android:paddingTop="15dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="10dp"
                            android:src="@drawable/img_food"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:gravity="center"
                            android:minWidth="0dp"
                            android:minHeight="0dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="25dp"
                    android:background="#FBF0F4"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ksView"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="경성 페이지  "
                            android:textSize="20dp"
                            android:fontFamily="@font/maplebold" />

                        <TextView
                            android:id="@+id/foodView"
                            android:layout_width="210dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="   학식메뉴  "
                            android:textSize="20dp"
                            android:fontFamily="@font/maplebold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="150dp"
                    android:background="#EFEBF6"
                    android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/bus_move"
                            android:layout_width="40dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginRight="50dp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:src="@drawable/img_bus2"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:gravity="center"
                            android:minWidth="0dp"
                            android:minHeight="0dp" />

                        <ImageButton
                            android:id="@+id/ponnumer_move"
                            android:layout_width="40dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginRight="40dp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom"
                            android:paddingTop="12dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="12dp"
                            android:src="@drawable/img_ponicon"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:gravity="center"
                            android:minWidth="0dp"
                            android:minHeight="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="25dp"
                    android:background="#EFEBF6"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/busView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="버스 시간표"
                            android:textSize="20dp"
                            android:fontFamily="@font/maplebold" />

                        <TextView
                            android:id="@+id/phoneView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="  전화번호부"
                            android:textSize="20dp"
                            android:fontFamily="@font/maplebold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="150dp"
                    android:background="#FDF2E2"
                    android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/job_move"
                            android:layout_width="40dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginRight="50dp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom"
                            android:paddingTop="12dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="12dp"
                            android:src="@drawable/img_job2"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:gravity="center"
                            android:minWidth="0dp"
                            android:minHeight="0dp" />

                        <ImageButton
                            android:id="@+id/news_move"
                            android:layout_width="40dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginRight="40dp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom"
                            android:paddingTop="12dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="12dp"
                            android:src="@drawable/img_news"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:gravity="center"
                            android:minWidth="0dp"
                            android:minHeight="0dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="25dp"
                    android:background="#FDF2E2"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/jobView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="취업정보 "
                            android:textSize="20dp"
                            android:fontFamily="@font/maplebold" />

                        <TextView
                            android:id="@+id/news_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text=" 뉴스"
                            android:textSize="20dp"
                            android:fontFamily="@font/maplebold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="150dp"
                    android:background="#E6F1DA"
                    android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/time_movesub"
                            android:layout_width="40dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginRight="50dp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom"
                            android:paddingTop="12dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="12dp"
                            android:src="@drawable/img_time"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:gravity="center"
                            android:minWidth="0dp"
                            android:minHeight="0dp" />

                        <ImageButton
                            android:id="@+id/info_move"
                            android:layout_width="40dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginRight="40dp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/custom"
                            android:paddingTop="12dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:paddingBottom="12dp"
                            android:src="@drawable/img_info"
                            android:adjustViewBounds="true"
                            android:scaleType="fitCenter"
                            android:gravity="center"
                            android:minWidth="0dp"
                            android:minHeight="0dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="400dp"
                    android:layout_height="match_parent"
                    android:background="#E6F1DA"
                    android:orientation="horizontal">

                        <TextView
                            android:id="@+id/timeViewsub"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="시간표 "
                            android:textSize="20dp"
                            android:fontFamily="@font/maplebold" />

                        <TextView
                            android:id="@+id/timeViewsub2"
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="  제작자정보"
                            android:textSize="20dp"
                            android:fontFamily="@font/maplebold" />
                </LinearLayout>


        </LinearLayout>
</ScrollView>